<div class="row justify-content-center">
    <div class="col-8">
        <form name="editForm" role="form" novalidate (ngSubmit)="save()" [formGroup]="editForm">
            <h2 id="heading" >Create or edit a <%= entityTitleSingular %></h2>
            <div>
                <div class="form-group" [hidden]="!editForm.get('id').value">
                    <label for="id">ID</label>
                    <input type="text" class="form-control" id="id" name="id" formControlName="id"
                           readonly />
                </div><% for (const field of generatedFields) {%><% switch (field.fieldType) {
                        case 'String' : %>
                <div class="form-group">
                    <label class="form-control-label" for="field_<%= field.fieldName%>"><%= field.fieldTitle%></label>
                    <input type="text" class="form-control" name="<%= field.fieldName%>" id="field_<%= field.fieldName%>"
                           formControlName="<%= field.fieldName%>"/>
                </div><% break;

                        case 'ObjectId' : %>
                <div class="form-group">
                    <label class="form-control-label" for="field_<%= field.fieldName%>"><%= field.fieldTitle%></label>
                    <input type="text" class="form-control" name="<%= field.fieldName%>" id="field_<%= field.fieldName%>"
                           formControlName="<%= field.fieldName%>"/>
                </div>                                <% break;

                        case 'Boolean' : %>
               <div class="form-group">
                    <label class="form-control-label" for="field_<%= field.fieldName%>"><%= field.fieldTitle%></label>
                    <input type="checkbox" class="form-control" name="<%= field.fieldName%>" id="field_<%= field.fieldName%>"
                           formControlName="<%= field.fieldName%>"/>
                </div><% break;
                        case 'Date' : %>
                <div class="form-group">
                    <label class="form-control-label" for="field_<%= field.fieldName%>"><%= field.fieldTitle%></label>
                    <div class="d-flex">
                        <input id="field_<%= field.fieldName%>" type="datetime-local" class="form-control" name="<%= field.fieldName%>" formControlName="<%= field.fieldName%>" placeholder="YYYY-MM-DD HH:mm"/>
                    </div>
                </div>
                                <% break;
                        case 'Number' : %>
                <div class="form-group">
                    <label class="form-control-label" for="field_<%= field.fieldName%>"><%= field.fieldTitle%></label>
                    <input type="number" class="form-control" name="<%= field.fieldName%>" id="field_<%= field.fieldName%>"
                           formControlName="<%= field.fieldName%>"/>
                </div><% break;} %><%}%>
            </div>
            <div>
                <button type="button" id="cancel-save" class="btn btn-secondary"  (click)="previousState()">
                    <fa-icon [icon]="'ban'"></fa-icon>&nbsp;<span >Cancel</span>
                </button>
                <button type="submit" id="save-entity" [disabled]="editForm.invalid || isSaving" class="btn btn-primary">
                    <fa-icon [icon]="'save'"></fa-icon>&nbsp;<span >Save</span>
                </button>
            </div>
        </form>
    </div>
</div>
